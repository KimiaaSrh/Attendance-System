<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"

    tools:context=".Activity.adminReportActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="428dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape3"
            android:text="تاریخ پایان"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text=" تا "
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape3"
            android:text="تاریخ شروع"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text=" از "
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="6dp"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/hamebuttion"
            android:text="همه"
            android:textColor="#000000"
            android:textSize="17dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/hozurbuttion"
            android:text="حضور"
            android:textColor="#000000"
            android:textSize="17dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/gheibatbuttion"
            android:text="غیبت"
            android:textColor="#000000"
            android:textSize="17dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/shape3"
            android:backgroundTint="@color/morkhasibuttun"
            android:text="مرخصی"
            android:textColor="#000000"
            android:textSize="17dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="نام و نام خانوادگی"
        android:inputType="textPersonName"
        android:textColorHint="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="شماره پرسنلی"
        android:inputType="textPersonName"
        android:textColorHint="#707070"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView

        android:layout_width="31dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView

        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>